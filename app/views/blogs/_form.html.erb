
<%= form_with(model: blog) do |form| %>
  <% if blog.errors.any? %>
        <% blog.errors.full_messages.each do |error| %>
          <%= render "shared/flash", level: :error, content: error %>
        <% end %>
  <% end %>

  <div class="form-group">
    <%= form.text_field :title, class: 'form-control', placeholder: 'Title' %>
  </div>

  <div class="form-group">
    <%= form.label :topic %>
    <%= form.collection_select(:topic_id, Topic.all, :id, :title,
                                {
                                  include_blank: true
                                },
                                class: 'form-control'
                              )
    %>
  </div>

  <div class="form-group">
    <%= form.radio_button :status, "draft" %>
    <%= form.label :status, "Draft" %>

    <%= form.radio_button :status, "published" %>
    <%= form.label :status, "Published" %>
  </div>

  <div class="form-group">
    <%= form.rich_text_area :body, class: 'form-control', rows: 15, placeholder: 'Content' %>
  </div>

  <div class="form-group">
    <%= form.submit "Submit", class: 'btn btn-outline-primary' %>
  </div>
<% end %>
